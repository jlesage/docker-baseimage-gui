	base[SELECTED]    = @bg_active_color # selected text
	base[INSENSITIVE] = "#323636"

	text[NORMAL]      = "#FFFFFF"
	text[PRELIGHT]    = @selected_color
	text[ACTIVE]      = "#FFFFFF"
	text[SELECTED]    = @selected_color
	text[INSENSITIVE] = "#969696"

