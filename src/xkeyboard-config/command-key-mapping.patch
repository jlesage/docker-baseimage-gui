-    key <RCTL> {[  Control_R  ]};
+    key <LCTL> {[  Control_L, Super_L  ]};
+    key <RCTL> {[  Control_R, Super_R  ]};
     key <LALT> {[  Alt_L,  Meta_L  ]};
     key <RALT> {[  Alt_R,  Meta_R  ]};
