#
--- a/symbols/pc	2025-12-19 19:11:45.564987730 -0500
+++ b/symbols/pc	2025-12-19 19:13:02.384359214 -0500
@@ -17,12 +17,10 @@
 
     key <LFSH> {[  Shift_L    ]};
     key <RTSH> {[  Shift_R    ]};
